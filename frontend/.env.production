# Production Environment Configuration
# Budget Tracker - localStorage Only Mode

# =============================================================================
# API CONFIGURATION - DISABLED FOR PRODUCTION
# =============================================================================

# IMPORTANT: Keep this as 'false' for localStorage-only mode
REACT_APP_USE_API=false

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production Mode
NODE_ENV=production

# Disable Debug Logging in Production
REACT_APP_DEBUG=false

# =============================================================================
# OFFLINE MODE CONFIGURATION
# =============================================================================

# Enable offline support (always true for localStorage mode)
REACT_APP_ENABLE_OFFLINE=true

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Enable client-side caching
REACT_APP_ENABLE_CACHE=true

# Cache expiry time (milliseconds) - 5 minutes
REACT_APP_CACHE_EXPIRY=300000

# =============================================================================
# ERROR HANDLING
# =============================================================================

# Hide detailed error messages in production
REACT_APP_SHOW_ERROR_DETAILS=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Pagination default page size
REACT_APP_DEFAULT_PAGE_SIZE=20

# Maximum page size
REACT_APP_MAX_PAGE_SIZE=100

# Request debounce delay (milliseconds)
REACT_APP_DEBOUNCE_DELAY=300
