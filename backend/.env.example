# Environment Configuration
NODE_ENV=development
PORT=3001

# Storage Configuration
# Options: 'localStorage' (default) or 'database'
# Use 'localStorage' for development without database setup
# Use 'database' for production with Supabase
STORAGE_MODE=localStorage

# LocalStorage Configuration (when STORAGE_MODE=localStorage)
# Path where localStorage files will be stored
LOCALSTORAGE_PATH=./data
# Enable file persistence (set to false for in-memory only)
LOCALSTORAGE_PERSIST=true

# Database Configuration (Supabase - when STORAGE_MODE=database)
SUPABASE_URL=your-supabase-project-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# File Upload (Optional)
MAX_FILE_SIZE=5242880

# Email Configuration (Optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@budgettracker.com
